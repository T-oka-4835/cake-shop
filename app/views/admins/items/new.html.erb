<h4>商品新規登録</h4>

<%= form_with model: @item, url: admins_items_path, local:true do |f| %>
  <div>
    <label>商品画像</label>
    <%= f.attachment_field :image %>
  </div>

  <div>
    <label>商品名</label>
    <%= f.text_field :name %>
  </div>

  <div>
    <label>商品説明</label>
    <%= f.text_area :explanation %>
  </div>

  <div>
    <label>ジャンル</label>
  </div>

  <div>
    <label>税抜価格</label>
    <%= f.text_field :price %>
  </div>

  <div>
    <label>販売ステータス</label>
  </div>

  <%= f.submit "新規登録" %>
<% end %>