<h4>注文情報入力</h4>

<%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>
  <div>
    <p>注文方法</p>
    <div>
      <%= f.radio_button :pay_way, "クレジットカード", checked: true  %>クレジットカード
    </div>
    <div>
      <%= f.radio_button :pay_way, "銀行振込" %>銀行振込
    </div>
  </div>

  <div>
    <p>お届け先</p>
    <div>
      <div><%= f.radio_button :order, 0, checked: true  %>ご自身の住所</div>
      <div><%= @customer.postcode + @customer.address %></div>
      <div><%= @customer.last_name + @customer.first_name %></div>
    </div>
    <div>
      <div><%= f.radio_button :order, 1 %>登録済住所から選択</div>
      <%= f.collection_select(:id, @addresses, :id, :register_address )%>
    </div>
    <div>
      <%= f.radio_button :order, 2 %>新しいお届け先
      <div>
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :postcode %>
      </div>
      <div>
        <%= f.label :"住所" %>
        <%= f.text_field :address %>
      </div>
      <div>
        <%= f.label :"宛名" %>
        <%= f.text_field :name %>
      </div>
    </div>
    <%= f.submit "確認画面へ進む" %>
  </div>
<% end %>

