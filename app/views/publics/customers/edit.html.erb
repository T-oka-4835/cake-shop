<h4 class="devise-title">会員情報編集</h4>

<%= form_with model: @customer, url: customer_path, class: 'new-customer', local: true do |f| %>
  <ul>
    <li class="devise-field">
      <%= f.label :'名前' %>
      <%= f.text_field :last_name %>
      <div class="field-right">
        <%= f.text_field :first_name %>
      </div>
    </li>
    <li class="devise-field">
      <%= f.label :'フリガナ' %><br />
      <%= f.text_field :last_name_kana %>
      <div class="field-right">
        <%= f.text_field :first_name_kana  %>
      </div>
    </li>
    <li class="devise-field">
      <%= f.label :'メールアドレス' %>
      <%= f.email_field :email %>
    </li>
    <li class="devise-field">
      <%= f.label :'郵便番号(ハイフンなし)' %><br />
      <%= f.text_field :postcode %>
    </li>
    <li class="devise-field">
      <%= f.label :'住所' %><br />
      <%= f.text_field :address %>
    </li>

    <li class="devise-field">
      <%= f.label :'電話番号' %><br />
      <%= f.text_field :phonenumber %>
    </li>

    <li class="devise-field actions">
      <%= f.submit "編集内容を保存" %>
      <div class="unsubscribe-link">
        <%= link_to "退会する",  customers_unsubscribe_path %>
      </div>
    </li>
  </ul>
<% end %>
