<h4 class="devise-title">マイページ</h4>

<div class="mypage-edit-link">
  <p class="mypage-title">登録情報</p>
  <%= link_to "編集する", edit_customer_path(@customer) %>
</div>

<table class="mypage-table">
  <tr>
    <th class="mypage-th">氏名</th>
    <td>
      <%= @customer.last_name + @customer.first_name %>
    </td>
  </tr>
  <tr>
    <th class="mypage-th">カナ</th>
    <td>
      <%= @customer.last_name_kana + @customer.first_name_kana %>
    </td>
  </tr>
  <tr>
    <th class="mypage-th">郵便番号</th>
    <td>
      <%= @customer.postcode %>
    </td>
  </tr>
  <tr>
    <th class="mypage-th">住所</th>
    <td>
      <%= @customer.address %>
    </td>
  </tr>
  <tr>
    <th class="mypage-th">電話番号</th>
    <td>
      <%= @customer.phonenumber %>
    </td>
  </tr>
  <tr>
    <th class="mypage-th">メールアドレス</th>
    <td>
      <%= @customer.email %>
    </td>
  </tr>
</table>

<div class="mypage-address-link">
  <p class="mypage-title">配送先</p>
  <%= link_to "一覧を見る", addresses_path %>
</div>

<div class="mypage-address-link">
  <p class="mypage-title">注文履歴</p>
  <%= link_to "一覧を見る", orders_path %>
</div>