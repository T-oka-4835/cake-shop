<%= form_with model: @cart, url: carts_path, local: true do |f| %>
  <div>
    <%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg', class: "item-picture", fallback: "no_image.jpg" %>
  </div>
  <div>
    <%= @item.name %>
  </div>
  
  <div>
    <%= @item.explanation %>
  </div>
  <div>
    ¥<%= @item.price %>(税込)
  </div>
  <div>
    <%= f.number_field :amount, min: 1, max: 10, placeholder: "個数選択" %>個
  </div>
  <div>
    <%= f.hidden_field :name, :value => @item.name %>
    <%= f.hidden_field :price, :value => @item.price %>
  </div>
  <div>
    <%= f.submit 'カートに入れる' %>
  </div>
<% end %>