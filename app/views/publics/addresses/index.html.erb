<h4 class="devise-title">配送先登録/一覧</h4>
<%= form_with model: @address, url: addresses_path, local: true do |f| %>
  <ul>
    <li class="devise-field">
      <%= f.label :"郵便番号(ハイフンなし)" %>
      <%= f.text_field :postcode %>
    </li>

    <li class="devise-field">
      <%= f.label :"住所" %>
      <%= f.text_field :address %>
    </li>

    <li class="devise-field">
      <%= f.label :"宛名" %>
      <%= f.text_field :name %>
    </li>
    <li class="address-submit">
      <%= f.submit "新規登録" %>
    </li>
  </ul>
<% end %>


<table class="address-table">
  <colgroup span="4"></colgroup>
  <tr class="address-thead">
    <th style="width:20%;">郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th style="width:20%;"></th>
  </tr>
  <tbody>
    <tr>
      <td>
        <%= @customer.postcode %>
      </td>
      <td>
        <%= @customer.address %>
      </td>
      <td>
        <%= @customer.last_name + @customer.first_name %>
      </td>
      <td>
        <%= link_to "編集する", customers_my_page_path %>
      </td>
    </tr>
    <% @addresses.each do |address| %>
      <tr>
        <td>
          <%= address.postcode %>
        </td>
        <td>
          <%= address.address %>
        </td>
        <td>
          <%= address.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_address_path(address) %>
          <%= link_to "削除する", address_path(address), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
